<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MicroWaves" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#004c94</item>
        <item name="colorPrimaryVariant">#003466</item>
        <item name="colorOnPrimary">@color/cream_bg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cream_bg</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/cream_bg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/dark_gray_bg</item>
        <item name="android:textColorPrimary">@color/white_fg</item>
        <item name="android:textColor">@color/white_fg</item>

    </style>

    <style name="Theme.MicroWaves.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MicroWaves.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MicroWaves.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>